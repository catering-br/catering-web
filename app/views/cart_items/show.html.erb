<header class="header-default">
  <div class="main">
    <div class="header-content">
      <div class="header-content-inner">
        <div class="col-md-offset-2 col-md-8">
          <div class="panel panel-default">
            <div class="panel-heading"><h2 class="text-center"><i class="fa fa-cutlery"></i> Produto!</h2></div>
            <div class="panel-body">
              <% if notice %>
                  <div id="notice" class="alert alert-success"><%= notice %></div>
              <% end %>

              <div class="text-left text-success">
                <strong>Shopping cart:</strong>
                <%= @cart_item.shopping_cart_id %>
              </div>

              <div  class="text-left text-success">
                <strong>Quantity:</strong>
                <%= @cart_item.quantity %>
              </div>

              <div class="text-left text-success">
                <strong>Unitary price:</strong>
                <%= @cart_item.unitary_price %>
              </div>

            </div>
          </div>
          <%= link_to 'Edit', edit_cart_item_path(@cart_item) %> |
          <%= link_to 'Back', shopping_cart_path(@cart_item.shopping_cart) %>

        </div>
      </div>
    </div>

  </div>
</header>