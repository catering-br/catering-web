<% value = product.rating %>
<% for i in 1..value.floor %>
  <i class="fa fa-star" style="font-size:28px"></i>
<% end %>
<% empty = 5 - value.floor %>
<% if value - value.floor >= 0.5 %>
  <i class="fa fa-star-half-o" style="font-size:28px"></i>
  <% empty = empty - 1 %>
<% end %>
<% for i in 1..empty %>
  <i class="fa fa-star-o" style="font-size:28px"></i>
<% end %>