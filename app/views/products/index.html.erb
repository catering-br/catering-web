<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Professional</th>
      <th>Thumbnail</th>
      <th>Categoria</th>
      <th>Nome</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantidade m√°xima</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.professional_id %></td>
        <% picture = Picture.where(product_id: product.id).take %>
        <% if picture != nil %>
          <td><%= image_tag picture.image.url(:thumb) %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= product.category_product.name %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.maxQuantity %></td>
        <td><%= product.rating %></td>
        <td><%= link_to 'Show', product %></td>
        <% if @current_professional != nil && @current_professional.id == product.professional_id %>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% if @current_consumer != nil %>
            <td><%= link_to 'Buy', buy_shopping_cart_path(@current_cart, :product => product) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

