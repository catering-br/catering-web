<% if notice %>
    <div id="notice" class="alert alert-success"><%= notice %></div>
<% end %>

<p>
  <strong>Images:</strong>
    <% @pictures.each do |p| %>
      <%= image_tag p.image.url(:medium) %>
  <% end %>
</p>

<p>
  <strong>Professional:</strong>
  <%= @product.professional.client.name %>
</p>

<p>
  <strong>Categoria:</strong>
  <%= @product.category_product.name %>
</p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>MaxQuantity:</strong>
  <%= @product.max_quantity %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @product.rating %>
</p>

<% if @current_professional != nil && @current_professional.id == @product.professional_id %>
<%= link_to 'Edit', edit_product_path(@product) %> |
<% end %>
<%= link_to 'Back', products_path %>
