<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Cep</th>
      <th>Tipo</th>
      <th>Street</th>
      <th>Number</th>
      <th>Complement</th>
      <th>Neighborhood</th>
      <th>City</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.client_id %></td>
        <td><%= address.cep %></td>
        <td><%= Address.address_types.keys[address.address_type] %></td>
        <td><%= address.street %></td>
        <td><%= address.number %></td>
        <td><%= address.complement %></td>
        <td><%= address.neighborhood %></td>
        <td><%= address.city %></td>
        <td><%= address.country %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

