<p id="notice"><%= notice %></p>

<h1>Credit Cards</h1>

<table>
  <thead>
    <tr>
      <th>Consumer</th>
      <th>Name</th>
      <th>Number</th>
      <th>Digit</th>
      <th>Flag</th>
      <th>Expiration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_cards.each do |credit_card| %>
      <tr>
        <td><%= credit_card.consumer_id %></td>
        <td><%= credit_card.name %></td>
        <td><%= credit_card.number %></td>
        <td><%= credit_card.digit %></td>
        <td><%= credit_card.flag %></td>
        <td><%= credit_card.expiration %></td>
        <td><%= link_to 'Show', credit_card %></td>
        <td><%= link_to 'Edit', edit_credit_card_path(credit_card) %></td>
        <td><%= link_to 'Destroy', credit_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Credit Card', new_credit_card_path %>
