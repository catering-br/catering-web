<section >
  <div class="container">
    <% if notice %>
        <div id="notice" class="alert alert-success"><%= notice %></div>
    <% end %>

    <h2>Items no carrinho:</h2><p/>
    <%= render 'list_items', cart_items: @cart_items %>

    <h4>Total: <%= number_to_currency(@total) %></h4>

    <%= link_to 'Continuar comprando', products_path %> |
    <%= link_to 'Finalizar compra', new_payment_path(shopping_cart_id: @shopping_cart.id) %>
  </div>
</section>